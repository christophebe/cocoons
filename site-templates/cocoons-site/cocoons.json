{
  "siteName"        : "Cocoons.io",
  "port"            : 8080,
  "source"          : "src",
  "target"          : "target",
  "favicon"         : "src/images/favicon.png",

  "previewEngine"   : "./cocoon-fs.js",
  "markdownRender"  : "./bootstrap-render.js",

  "templateFolder"  : "templates",
  "defaultTemplate" : "page.jade",
  "templateEngine"  : "jade",

  "widgetFolder"    : "widgets",

  "widgets" : [
      { "region" : "beforecontent",
        "widgets" : [
          {"order" : 1, "name" : "adsense_690_90.html"}
        ]

      },
      {"region" : "sidebar",
       "widgets" : [
         {"order" : 1, "name" : "contact.jade"},
         {"order" : 2, "name" : "links.jade",
            "properties" : {
             "title" : "Follow us ! ",
             "urls"  : [
               {"href" : "https://github.com/christophebe/cocoons", "anchor" : "GitHub" },
               {"href" : "https://twitter.com/cocoons_io", "anchor" : "Twitter" }
             ]
           }
         },
         {"order" : 3, "name" : "adsense_200_200.html"}
       ]
     },

     {
       "region" : "scripts",
       "widgets" : [
         {"order" : 100, "name" : "google-analytics.jade",
           "properties" :  {
             "gaid" : "UA-1832395-7"
           }

         }
       ]
     }
  ],
  "homePage" : "/index.html",

  "menu" : {
      "Features" : "/features.html",
      "Getting Started" : "/getting-started.html"

  },
  "redirects" : [
    {"from": "/", "to" : "/index.html"},
    {"from" : "www.*", "to" : "*"}

  ]

}
