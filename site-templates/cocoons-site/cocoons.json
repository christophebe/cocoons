{
  "siteName"        : "Cocoons.io",
  "port"            : 8080,
  "source"          : "src",
  "target"          : "target",
  "favicon"         : "/images/favicon.png",

  "previewEngine"   : "../fs/preview-fs.js",

  "templateFolder"  : "templates",
  "defaultTemplate" : "page.jade",
  "templateEngine"  : "jade",

  "homePage"        : "index.html",
  "notFoundPage"    : "404.html",
  "errorPage"       : "500.html",

  "menu" : {
      "Features" : "/features.html",
      "Getting Started" : "/getting-started.html"

  },

  "widgetFolder"    : "widgets",

  "widgets" : [
      { "region" : "beforecontent",
        "widgets" : [
          {"order" : 1, "name" : "adsense_690_90.html"}
        ]

      },
      {"region" : "sidebar",
       "widgets" : [
         {"order" : 1, "name" : "contact.jade"},
         {"order" : 2, "name" : "links.jade",
            "properties" : {
             "title" : "Follow us ! ",
             "urls"  : [
               {"href" : "https://github.com/christophebe/cocoons", "anchor" : "GitHub" },
               {"href" : "https://twitter.com/cocoons_io", "anchor" : "Twitter" }
             ]
           }
         },
         {"order" : 3, "name" : "adsense_200_200.html"}
       ]
     },

     {
       "region" : "scripts",
       "widgets" : [
         {"order" : 100, "name" : "google-analytics.jade",
           "properties" :  {
             "gaid" : "UA-1832395-7"
           }

         }
       ]
     }
  ],

  "htaccess" : {
    "generate" : true,
    "hideDirectories" : true,
    "denyAccessToHtaccess" : true,
    "rewrite" : {
      "blockAccessHiddenDirectories" : true,
      "withwww" : false
    },
    /*"authorizedFileTypes" : "html|json|xml|css|js|jpe?g|png|gif|pdf|docx|rtf|xls|odf|zip|rar",*/
    /*"blockedIps" : ["111.111.11.11", "222.222.22.22"], */
    "browserCache" : true

  }

}
