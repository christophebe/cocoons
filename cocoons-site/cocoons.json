{
  "siteName" : "Cocoons.io",
  "slogan" : "Because Blogging sucks!",
  "port" : 8080,
  "source"   : "src",
  "target"   : "target",
  "favicon"  : "src/images/favicon.png",

  "templateFolder" : "templates",
  "defaultTemplate" : "page.jade",
  "templateEngine" : "jade",

  "widgetFolder" : "widgets",

  "widgets" : [
      {"region" : "sidebar",
       "widgets" : [
         {"order" : 1, "name" : "contact.jade"},
         {"order" : 2, "name" :  "links.jade"}
       ]
      }
  ],
  "homePage" : "/index.html",

  "menu" : {
      "Getting Started" : "/getting-started.html"
  },
  "redirects" : [
    {"from": "/", "to" : "/index.html"},
    {"from" : "www.*", "to" : "*"}

  ]

}
