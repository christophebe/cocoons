{
  "siteName"        : "Cocoons.io",
  "port"            : 8080,
  "source"          : "src",
  "target"          : "target",
  "favicon"         : "src/images/favicon.png",
  "previewEngine"   : "./cocoon-fs.js",
  "templateFolder"  : "templates",
  "defaultTemplate" : "page.jade",
  "templateEngine"  : "jade",

  "widgetFolder"    : "widgets",

  "widgets" : [
      {"region" : "sidebar",
       "widgets" : [
         {"order" : 1, "name" : "contact.jade"},
         {"order" : 2, "name" : "links.jade",
            "properties" : {
             "title" : "Follow us ! ",
             "urls"  : [
               {"href" : "https://github.com/christophebe/cocoons", "anchor" : "GitHub" },
               {"href" : "https://twitter.com/cocoons_io", "anchor" : "Twitter" }
             ]
           }
         }
       ]
      }
  ],
  "homePage" : "/index.html",

  "menu" : {
      "Getting Started" : "/getting-started.html",
      "Features" : "/features.html"
  },
  "redirects" : [
    {"from": "/", "to" : "/index.html"},
    {"from" : "www.*", "to" : "*"}

  ]

}
